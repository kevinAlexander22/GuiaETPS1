<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtValor1"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Valor1"
        android:inputType="textPersonName"
        android:onClick="Operaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        tools:hint="Valor1" />

    <Button
        android:id="@+id/btnCalculo"
        android:layout_width="265dp"
        android:layout_height="59dp"
        android:layout_marginTop="248dp"
        android:onClick="Operaciones"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtValor1"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/edtValor1"
        app:layout_constraintTop_toBottomOf="@+id/edtValor1" />

    <TextView
        android:id="@+id/txvIncremento"
        android:layout_width="154dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/edtValor1"
        app:layout_constraintStart_toStartOf="@+id/edtValor1"
        app:layout_constraintTop_toBottomOf="@+id/edtValor1" />

    <TextView
        android:id="@+id/txvDecre"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txvIncremento"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txvIncremento"
        app:layout_constraintTop_toBottomOf="@+id/txvIncremento" />

    <TextView
        android:id="@+id/txvDuplicado"
        android:layout_width="154dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txvDecre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txvDecre"
        app:layout_constraintTop_toBottomOf="@+id/txvDecre" />

</androidx.constraintlayout.widget.ConstraintLayout>